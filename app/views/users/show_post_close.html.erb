<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/shared/left_settings' %>
    </div>
    <div class="col-md-9">
      <div class="bg-white p-3 mt-3">
        <span class="font-weight-bold pl-2">
          <i class="fas fa-list color-green mr-2"></i>
          Post Close User</span>
        <div class="container px-3 all-articles ">
          <div class="mt-3">
            <% @posts.each do |post| %>
              <%= render partial: "users/posts_user/topic", locals: {post: post} %>
            <% end %>
            <%== render partial: 'users/shared/pagination', locals: {pagy: @pagy} %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
