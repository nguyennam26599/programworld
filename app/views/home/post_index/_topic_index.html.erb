<div class="view-blog bg-white p-3">
  <div class="title-blog p-1">
    <i class="far fa-chart-bar"></i>
    <span class="font-size-11em"><%= t(".trends_html") %></span>
    <span class="text-muted font-size-08em"><%== sub_label_page_index(params[:scope]) %></span>
  </div>
  <div>
    <nav class="nav border-bottom">
      <%= link_to t(".daily_html"), root_path, class: "nav-link text-muted #{active_post_home('daily')}" %>
      <%= link_to t(".weekly_html"), '?scope=weekly', class: "nav-link text-muted #{active_post_home('weekly')}" %>
      <%= link_to t(".monthly_html"), '?scope=monthly', class: "nav-link text-muted #{active_post_home('monthly')}" %>
    </nav>
    <% @posts.each do |post| %>
      <%= render partial: "home/post_index/topic", locals: { post: post }%>
    <% end %>
    <%== render partial: 'users/shared/pagination', locals: { pagy: @pagy } %>
  </div>
</div>
