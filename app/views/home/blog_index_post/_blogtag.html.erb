<% if user_signed_in? %>
  <% if @posts.blank? %>
    <div class="text-center m-5 text-muted">
    <span class="clearfix mb-3 font-size-13em"> You have not followed any users or tags.</span>
    <span class="clearfix m-0 font-size-09em">
      Please follow the <%= link_to "tags", tags_path, class: "text-decoration-none" %> to view their posts.
    </span>
  </div>
  <% end %>
  <div class="view-blog px-3 mt-4">
  <% @posts.sort.reverse.each do |post| %>
      <%= render partial: "home/post_index/topic", locals: {post: post, tag_item: current_user.tag_followings} %>
  <% end %>
  </div>
<% else %>
  <div class="text-center m-5 text-muted">
    <span class="clearfix mb-3 font-size-13em"> You are not logged in.</span>
    <span class="clearfix m-0 font-size-09em">
      Please <%= link_to "log in", login_path, class: "text-decoration-none" %> to see the posts you are following
    </span>
  </div>
<% end %>
