              <%= link_to fa_icon("fa fa-fw fa-search","Hituno Jobs"), "#", class: "dropdown-item"%>
              <%= link_to fa_icon("fa fa-fw fa-comments","HitunoDon"), "#", class: "dropdown-item"%>
              <%= link_to fa_icon("far fa-fw fa-newspaper","Hiruno Zine"), "#", class: "dropdown-item"%>
                <div class="dropdown-divider"></div>
              <%= link_to fa_icon("fa fa-fw fa-book","Community Guideline"),"#", class: "dropdown-item"%>
              <%= link_to fa_icon("fa fa-fw fa-book","How to write good articles"), "#", class: "dropdown-item"%>
            </div>
          </li>

          <li class="nav-item btn_search_laptop d-sm-block ml-sm-3 d-none">
            <form class="form-inline form-control ">
              <i class="fa fa-search text-muted mr-1" aria-hidden="true"></i>
              <input class="mr-sm-2 border-0" type="search" placeholder="Search" aria-label="Search">
