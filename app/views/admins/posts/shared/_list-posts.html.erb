<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex">
      <h6 class="m-0 font-weight-bold text-primary">Posts</h6>
    </div>
    <%= render 'admins/posts/shared/search'%>
    <div class="card-body">
    <% if @posts.present? %>
      <div class="table-responsive-xl">
        <table class="table table-striped text-center w-100" id="table-tag" cellspacing="0">
          <thead>
            <tr>
              <th>ID</th>
              <th class="w-50">Title</th>
              <th>Author</th>
              <th>Status</th>
              <th>Created At</th>
              <th colspan="2">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td><%= post.id %></td>
              <td class="text-left w-50">
                <%= link_to admins_post_path(post) do %>
                <%= post.title %>
                <% end %>
              </td>
              <td>
                <%= link_to admins_user_path(post.user.id) do %>
                <%= post.user.name %>
                <% end %>
              </td>
              <td><%= post.status %></td>
              <td><%= date_format(post.created_at) %></td>
              <td>
                <%= link_to admins_post_path(post) do %>
                <i class="fas fa-eye text-primary show-action"></i>
                <% end %>
              </td>
              <td >
              <%= link_to admins_post_path(post), method: :put, data: { confirm: 'Are you sure?' } do %>
                <i class="fas fa-times-circle text-danger"></i>
              <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class='text-center text-muted'>
        <i class="far fa-ques tion-circle"></i>
        We found no results<br>
        Make sure all words are spelled correctly or try different keywords.
      </div>
    <% end %>
    </div>
  </div>
</div>