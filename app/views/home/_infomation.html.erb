<div class="bg-white pt-3 px-2 d-none d-lg-block">
  <div class="row">
    <div class="col-3 ">
      <%= avatar_for(current_user,'rounded mx-1 img-375em') %>
    </div>
    <div class="col-9">
      <div class="font-weight-bold font-size-12em">
        <%= current_user.full_name %>
      </div>
      <div class="font-size-08em">
        <%= link_to "@#{current_user.name}", "#", class: "text-muted text-decoration-none" %>
      </div>
    </div>
  </div>
  <div class="row pt-3">
    <div class="col-4 border-left-0 border-bottom-0 border text-center py-1">
      <span class="font-size-11em text-break"><%= current_user.posts.size %></span><br>
      <span class="font-size-07em text-muted">Post</span>
    </div>
    <div class="col-4 border-bottom-0 border text-center py-1">
      <span class="font-size-11em">421</span>
      <span class="font-size-07em text-muted">Contribution</span>
    </div>
    <div class="col-4 border-right-0 border-bottom-0 border text-center py-1">
      <span class="font-size-11em">312</span>
      <span class="font-size-07em text-muted">Followers</span>
    </div>
  </div>
</div>
