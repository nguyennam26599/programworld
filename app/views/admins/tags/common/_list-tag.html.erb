<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex">
      <h6 class="m-0 font-weight-bold text-primary">Tags &emsp; </h6>
      <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-plus-circle text-primary"></i>
        <%= link_to 'New tag', new_admins_tag_path, data: {turbolinks: false} %>
      </h6>
    </div>
    <%= raw render partial: 'users/shared/pagination', locals: {pagy: @pagy} %>
    <div class="card-body">
      <div class="table-responsive-xl">
        <table class="table table-striped text-center w-100" id="table-tag" cellspacing="0">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Avatar</th>
              <th>Created At</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @tags.each do |tag_item| %>
            <tr>
              <td><%= tag_item.id %></td>
              <td><%= tag_item.name %></td>
              <td>
                <%= image_tag default_avatar_tag(tag_item), class: "avatar-tag-item"  %>
              </td>
              <td><%= date_format(tag_item.created_at) %></td>
              <td>
                <%= link_to admins_tag_path(tag_item) do %>
                <i class="fas fa-eye text-primary"></i>
                <% end %>
              </td>
              <td>
                <%= link_to edit_admins_tag_path(tag_item), data: {turbolinks: false} do %>
                <i class="far fa-edit text-warning"></i>
                <% end %>
              </td>
              <td>
                <%= link_to admins_tag_path(tag_item), method: :delete, data: {confirm: 'Are you sure delete tag?'} do %>
                  <i class="fas fa-trash text-danger"></i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>