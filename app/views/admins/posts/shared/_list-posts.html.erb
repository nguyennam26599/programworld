<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="pt-3 pl-3 pr-3 d-flex bg-light">
      <%= render 'admins/posts/shared/nav' %>
    </div>
    <div class="card-body">
      <div class="table-responsive-xl">
        <table class="table table-striped text-center w-100" id="table-tag" cellspacing="0">
          <thead>
            <tr>
              <th>ID</th>
              <th class="w-50">Title</th>
              <th>Author</th>
              <th>Status</th>
              <th>Created At</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td><%= post.id %></td>
              <td class="text-left w-50">
                <%= link_to admins_post_path(post) do %>
                <%= post.title %>
                <% end %>
              </td>
              <td>
                <%= link_to admins_user_path(post.user.id) do %>
                <%= post.user.name %>
                <% end %>
              </td>
              <td>
                <span class=<%= post_status post %>> <%= post.status %></span>
              </td>
              <td><%= post.created_at.strftime("%d/%m/%Y - %H:%M") %></td>
              <td>
                <%= link_to admins_post_path(post) do %>
                <i class="fas fa-eye text-primary show-action"></i>
                <% end %>
              </td>
              <td class=<%= action_post_admin %>>
                <%= link_to admins_post_path(post, approve_status: Post::PUBLIC_STATUS), method: :put, data: {confirm: 'Are you sure approve post?'} do %>
                <i class="fas fa-check-circle text-success approve-action"></i>
                <% end %>
              </td>
              <td class=<%= action_post_admin %>>
                <%= link_to admins_post_path(post, approve_status: Post::CLOSE_STATUS), method: :put, data: {confirm: 'Are you sure decline post?'} do %>
                <i class="fas fa-times-circle text-danger approve-action"></i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>