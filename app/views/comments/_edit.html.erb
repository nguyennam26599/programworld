<div class="mb-3 text-center">
        <%= form_for @comment do |f| %>
            <div class="form-group text-left">
                <label>Edit comment!</label>
                <%= f.text_area :content, row: 3, class: "form-control", id: "comment-content-new"%>
            </div>
            <div class="text-right">
                <button type="submit" class=" btn-sm btn btn-outline-success"> Edit </button>
            </div>
        <% end %>
    <hr class="w-50">
</div> 