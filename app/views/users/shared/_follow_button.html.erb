<div class="btn-follow">
    <% if user_signed_in? %>
      <% if current_user == @user %>
          <%= link_to t('users.profile.edit_user'), profile_path, class: 'text-dark btn btn-light btn-sm btn-block border font-weight-bold' %>
      <% else %>
          <%= render 'users/shared/follow_form' %>
      <% end %>
    <% else %>
      <%= link_to t('users.profile.follow'), login_path, class: "btn btn-success btn-sm btn-block border font-weight-bold" %>
    <% end %>
</div>
