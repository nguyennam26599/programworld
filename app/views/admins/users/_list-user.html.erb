<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex">
            <h6 class="m-0 font-weight-bold text-primary">User</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive-xl">
                <table class="table table-hover text-center" width="100%" cellspacing="0">
                <thead>
                    <tr>
                      <th>ID</th>
                      <th>Full name</th>
                      <th>User name</th>
                      <th>Email</th>
                      <th>Post count</th>
                      <th>Status</th>
                      <th colspan="3" >Action</th>
                    </tr>
                  </thead>
                <tbody>
                  <% @users.each do |user| %>
                      <tr>
                        <td><%= user.id %></td>
                        <td><%= user.full_name %></td>
                        <td><%= link_to user.name, admins_user_path(user), class: 'text-dark text-decoration-none' %></td>
                        <td><%= user.email %></td>
                        <td><%= user.post_size %></td>
                        <td><%= user.status %></td>
                        <td><i class="far fa-edit text-warning"></i></td>
                        <td><i class="fas fa-address-book text-info"></i></td>
                        <td><i class="fas fa-ban text-danger"></i></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
        </div>
    </div>
</div>