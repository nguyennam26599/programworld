        <ul class="navbar-nav">
          <li class="nav-item dropdown mt-2 mr-1">
            <a class="far fa-caret-square-down text-white font-size-15em" data-toggle="dropdown" href="#" role="button"></a>
            <div class="dropdown-menu dropdown-menu-left">
              <%= link_to fa_icon("fa fa-fw fa-check","Hituno"),"#", class: "dropdown-item"%>
                <div class="dropdown-divider"></div>
                <div class="nologin text-muted font-weight-bold font-size-07em mt-2 ml-4">You are not logged in to any team</div>
