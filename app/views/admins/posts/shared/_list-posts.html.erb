<div class="container-fluid">
  <div class="card shadow mb-4">
    <%= raw render partial: 'users/shared/pagination', locals: {pagy: @pagy} %>
    <div class="card-body">
      <div class="table-responsive-xl">
        <table class="table table-striped text-center w-100" id="table-tag" cellspacing="0">
          <thead>
            <tr>
              <th>ID</th>
              <th class="w-50">Title</th>
              <th>Author</th>
              <th>Status</th>
              <th>Created At</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td><%= post.id %></td>
              <td class="text-left w-50">
                <%= link_to admins_post_path(post) do %>
                <%= post.title %>
                <% end %>
              </td>
              <td>
                <%= link_to admins_user_path(post.user.id) do %>
                <%= post.user.name %>
                <% end %>
              </td>
              <td><%= post.status %></td>
              <td><%= date_format(post.created_at) %></td>
              <td>
                <%= link_to admins_post_path(post) do %>
                <i class="fas fa-eye text-primary show-action"></i>
                <% end %>
              </td>
              <td >
                <i class="fas fa-check-circle text-success approve-action"></i>
              </td>
              <td >
                <i class="fas fa-times-circle text-danger approve-action"></i>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>