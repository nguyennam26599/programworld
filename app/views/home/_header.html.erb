            <div class="dropdown-menu text-left" aria-labelledby="navbarDropdownMenuLink">
              <%= link_to fa_icon("fa fa-fw fa-users","List of all Users"), "#", class: "dropdown-item"%>
              <%= link_to fa_icon("fas fa-fw fa-mobile-alt","List of all organizatioins"),"#", class: "dropdown-item"%>
              <%= link_to fa_icon("fa fa-fw fa-calendar","Advent Calendar"), "#", class: "dropdown-item"%>
