<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="pt-3 pl-3 pr-3 d-flex bg-light">
            <%= render 'admins/posts/shared/nav' %>
        </div>
        <div class="card-body">
            <div class="table-responsive-xl">
                <table class="table table-hover text-center w-100" id="table-tag" cellspacing="0">
                <thead>
                    <tr>
                      <th>ID</th>
                      <th class="w-50">Title</th>
                      <th>Author</th>
                      <th>Status</th>
                      <th>Created At</th>
                      <th colspan="3" >Action</th>
                    </tr>
                  </thead>
                <tbody>
                  <% @posts.each do |post| %>
                      <tr>
                        <td><%= post.id %></td>
                        <td class="text-left w-50">
                          <%= link_to admins_post_path(post), class: 'text-dark' do %>
                            <%= post.title %>
                          <% end %>
                        </td>
                        <td>
                          <%= link_to '#', class: 'text-dark' do %>
                            <%= post.user.name %>
                          <% end %>
                        </td>
                        <td><%= post.status %></td>
                        <td><%= post.created_at.strftime("%d/%m/%Y - %H:%M") %></td>
                        <td>
                          <%= link_to admins_post_path(post) do %>
                            <i class="fas fa-exclamation-circle text-primary show-action"></i>
                          <% end %>
                        </td>
                        <td class=<%= action_post_admin %>>
                          <%= link_to '#' do %>
                            <i class="fas fa-check-circle text-success approve-action"></i>
                          <% end %>    
                        </td>
                        <td class=<%= action_post_admin %>>
                          <%= link_to '#' do %>
                            <i class="fas fa-times-circle text-danger approve-action"></i>
                          <% end %>    
                        </td>
                      </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
</div>