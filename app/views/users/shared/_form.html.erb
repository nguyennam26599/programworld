<div class="container-build p-2 bg-light ">
    <div class="container p-1 main-container text-muted d-flex ml-auto mr-auto">
        <%= render 'users/shared/left_settings' %>
        <div class="main-profile p-3 flex-grow-1 bg-white">
            <%= form_for current_user do |f|  %>
                <div class="settings-title-section d-flex justify-content-center align-items-center flex-wrap">
                        <a class="settings-username" href="#"><%= current_user.name %></a>
                        <span class="settings-title-separator">/</span>
                        <span class="settings-title p-2"><%= t('users.shared.left_settings.public_profile')%></span>
                    </div>
                <div class="form-group font-weight-bold">
                <label for=""><%=t('.avatar_html') %></label><br>
                    <%= image_tag  default_avatar_user(current_user), class: "rounded-circle settings-avatar", id: "img-preview" %>
                    <%= f.file_field :avatar, id: "img-input", accept: ".jpg, .jpeg, .png" %>
                </div>
                <div class="form-group font-weight-bold">
                <label for=""><%= t('.full_name_html')%></label>
                    <div class="d-flex">
                    <%= f.text_field :first_name, class: 'form-control mr-1', placeholder: "#{t('.first_name_html')}",
                    pattern: regex_name_validate, title: "Name should only contain letters. e.g. John" %>
                    <%= f.text_field :last_name, class: 'form-control mr-1', placeholder: "#{t('.last_name_html')}",
                    pattern: regex_name_validate, title: "Name should only contain letters. e.g. Wick" %>
                    </div>
                </div>
                <div class="form-group ">
                    <h6 class='font-weight-bold'><%= t('.public_email_html')%></h6>
                    <div>
                        <%= f.check_box :email_public %>
                        <span><%= t('.checkbox_public_email')%></span>
                    </div>
                    <p class="text-black-50"><%=t('.label_email_public', email: current_user.email) %><a href="#"> <%=t('.change_email_address') %></a> </p>
                </div>
                <div class="form-group ">
                <label for="gender" class='font-weight-bold'><%= t('.gender_html')%></label><br>
                <% User.genders.keys.each do |gender| %>
                <%= f.radio_button :gender, gender %>
                <%= f.label User.human_enum_name(:gender, gender) %>
                <% end %>
                </div>
                <div class="form-group ">
                <label for="birthday" class='font-weight-bold'><%= t('.birthday_html')%></label><br>
                <%= f.text_field :birthday, data: { behavior: "flatpickr" } %>
                <div class="form-group ">
                    <label for="url_link" class='font-weight-bold'>URL</label><br>
                    <%= f.text_field :url_link, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <label for="organization", class='font-weight-bold'><%= t('.organization_html')%></label><br>
                    <%= f.text_field :organization, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <label for="address" class='font-weight-bold'><%= t('.address_html')%></label><br>
                    <%= f.text_field :address, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <label for="description" class='font-weight-bold'><%= t('.description_html')%></label><br>
                    <%= f.text_area :description, class: 'form-control', cols: '20', rows: '4' %>
                    <span class="text-black-50"><%= t('.description_attention_html')%></span>
                </div>
                <div class="form-group">
                    <label for="facebook_link" class='font-weight-bold'>Facebook ID</label><br>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="facebook-url">https://facebook.com/</span>
                        </div>
                        <%= f.text_field :facebook_link, class: 'form-control', id: "facebook-url"%>
                    </div>
                </div>
                <div class="form-group">
                    <label for="github-url" class='font-weight-bold'>Github ID</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="github-url">https://github.com/</span>
                        </div>
                        <%= f.text_field :github_link, class: 'form-control', id: "github-url"%>
                    </div>
                </div>
                <div class="form-group">
                <label for="linkedln-url" class='font-weight-bold'>LinkedIn ID</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="linkedln-url">https://www.linkedin.com/in/</span>
                        </div>
                        <%= f.text_field :linkedln_link, class: 'form-control', id: "linkedln-url"%>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.submit t('.update_user_html'), class: "btn btn-success" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
