<div class="container-build bg-light w-100">
    <div class="p-3">
        <%= form_for @post do |f| %>
            <div class="form-group">
                <%= f.text_field :title, class: "form-control placeholder-post-font-size", placeholder: t('.title_html'), id: "title" %>
            </div>
            <div class="form-group">
                <%= text_field_tag :tags, "", id: "tag-data", 'data-role' => "tagsinput", data: {autocomplete_source: search_tags_path}, placeholder: t('.description_tag_html') %>
                <div class="menu-list"></div>
            </div>
            <div class="form-group form-btn position-relative">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary dropdown-toggle btn-dropdown-status w-100 bg-white text-secondary" type="button">
                        <%= t('.save_html') %>
                    </button>
                    <div class="dropdown-menu-btn dropdown-menu-position bg-white position-absolute">
                        <div class="dropdown-header title-status text-size-10rem text-dark"><%= t('posts.new.title_html') %></div>
                        <div class="dropdown-header"><%= t('.visibility_html') %> </div>
                        <div class="dropdown-option text-size-08rem w-100 border-0">
                            <label class="post-publish text-muted" for="post-publish"><%= f.radio_button :status, :pending, id: "post-publish", checked: true %> <%=t('.publish_html') %></label><br>
                            <label class="post-draft text-muted" for="post-draft"><%= f.radio_button :status, :draft, id: "post-draft" %> <%=t('.private_draft_html') %></label>
                        </div>
                        <div class="dropdown-divider"></div>
                        <div class="dropdown-option text-muted w-100 border-0">
                            <p class="text-scope-status text-size-08rem w-100"><i class="fas fa-globe-americas"></i> <%= t('.select_option_publish_html') %> </p>
                        </div>
                        <div class="dropdown-option btn-submit w-100 border-0">
                            <%= f.button "Publish", class: "btn btn-outline-primary btn-sm btn-scope w-100" %>
                        </div>
                    </div>
                    <div class="dropdown-menu-text dropdown-menu-position bg-white text-size-10rem position-absolute">
                        <div class="dropdown-header "><%= t('.description_not_writing_html') %></div>
                    </div>
                </div>
            </div>
            <div class="form-group form-area">
                <%= f.label :content do %> <% end %>
                <%= f.rich_text_area :content %>
            </div>
        <% end %>
    </div>
</div>
