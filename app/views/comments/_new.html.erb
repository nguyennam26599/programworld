<div class="mb-3 text-center">
    <% if user_signed_in? %>
        <%= form_for Comment.new, remote: true do |f| %>
            <div class="form-group text-left">
                <label>New comment!</label>
                <%= f.text_area :content, row: 3, class: "form-control", id: "comment-content-new"%>
                <%= f.hidden_field :user_id, value: current_user.id %>
                <%= f.hidden_field :post_id, value: params[:id] %>
            </div>
            <div class="text-right">
                <button type="submit" id="create-comment" class=" btn-sm btn btn-outline-success">Comment</button>
            </div>
        <% end %>
    <% else %>
        <div>
            <%= link_to "Login to leave a comment!", login_path %>
        </div>
    <% end %>
    <hr class="w-50">
</div> 