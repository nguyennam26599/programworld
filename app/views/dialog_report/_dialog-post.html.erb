<dialog id="favDialog" class="border-0 dialog">
  <%= form_for [:admins, @report] do |dialog| %>
      <div class="dialog-header">Report post</div>
      <div class="dialog-item">
        <%= dialog.hidden_field :user_id, value: current_user.id %>
        <%= dialog.hidden_field :reportable, value: @post %>
        <input type="radio" name="report-post" value="spam"> Spam <br>
        <input type="radio" name="report-post" value="copyright"> Copyright
      </div>
      <%= dialog.text_field :content, class: "dialog-textarea pl-2 mt-2", placeholder:"  Comment" %>
    <menu>
      <button type="button" onclick="document.getElementById('favDialog').close()" class="btn btn-danger">Cancel</button>
      <%= dialog.submit 'Report', class: 'btn btn-success btn-report' %>
    </menu>
  <% end %>
</dialog>