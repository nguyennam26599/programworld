<% provide(:title, "Change password")%>
<div class="container-fuild h-screen font-type bg-image mt--3">
    <div class="w-25 m-auto pt-5">
        <h3 class="w-100 text-muted-light ml-4 mb-3">
            <%= link_to root_path, class: "navbar-brand pl-3 text-muted-light" do %>
            <i class="fas fa-home"></i>
            <% end %>Forgot password
        </h3>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group pt-3 border-bottom d-flex text-muted-light">
          <i class="fas fa-lock text-light mt-2"></i>
          <%= f.password_field :password, class: 'input-form-opacity placeholder-color-white', placeholder: ' New password minimum 6 characters' %>
        </div>

        <div class="form-group pt-3 border-bottom d-flex">
          <i class="fas fa-user-lock text-light mt-2"></i>
          <%= f.password_field :password_confirmation, class: 'input-form-opacity placeholder-color-white', placeholder: 'Confirm password' %>
        </div>

        <div class="form-group">
          <%= f.submit "Change my password", class:"btn bg-instagram-story w-100 mt-5 text-white font-weight-bold border-0" %>
        </div>
      <% end %>
    </div>
</div>
