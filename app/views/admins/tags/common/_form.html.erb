<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">New Shortlink</h6>
        </div>
        <div class="card-header py-3"> 
            <%= link_to "Back", admins_tags_path, class: "m-0 font-weight-light text-primary" %>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <%= form_for [:admins, @tag] do |f| %>
                        <div class="form-group text-muted">
                            <label for="imgInp" class="position-absolute camera"><i class="fas fa-camera"></i></label>
                            <%= f.file_field :avatar, class: "custom-file-input d-none", id: "imgInp" %>
                            <%= image_tag default_avatar_tag(@tag), class: "rounded avatar-tag position-relative", id: "img-preview" %>
                        </div>
                        <div class="form-group text-muted">
                            <%= render "admins/shared/error" %>
                            <%= f.text_field :name, class: "form-control", placeholder: "Tag name"%>
                        </div>
                        <%= f.submit class: "btn btn-primary" %>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
</div>
